{
  "hosting": {
      "target": "marketplace",
      "public": "public",
      "postdeploy": "firebase deploy --only hosting:marketplace tchopify",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  
}
